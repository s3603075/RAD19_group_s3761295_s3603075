 <header class="navbar navbar-fixed-top">
  <div class="container">
    <%= link_to "course app", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
          <a href="#" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown">
            <i class="fa fa-clone"></i> Category
          </a>
          <ul class="dropdown-menu">
            <% Course.select("category").group("category").each do |c| %>
              <li class="dropdown-item"><%= link_to "#{c.category}", categoryPath(c.category.gsub(" ", "_")) %></li>
            <% end %>
          </ul>
        </li>
        <li class="dropdown">
          <a href="#" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown">
            <i class="fa fa-map-marker"></i> Locations
          </a>
          <ul class="dropdown-menu">
            <% Location.all.each do |loc| %>
              <li><%= link_to "#{loc.location_name}", locationPath(loc.location_name.gsub(".", "_")) %></li>
            <% end %>
          </ul>
        </li>
        <% if logged_in? %>
          <li class="dropdown">
            <a href="#" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown">
              <i class="fa fa-user"></i> User
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", '#' %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
