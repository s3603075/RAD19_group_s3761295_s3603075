<% provide(:title, 'Contact Us') %>
<h1>Contact Us</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@contact, url: contact_us_path) do |f| %>
      <% if @contact.errors.any? %>
       <div id="error_explanation">
         <div class="alert alert-danger">
           The form contains <%= pluralize(@contact.errors.count, "error") %>.
         </div>
         <ul>
         <% @contact.errors.full_messages.each do |msg| %>
           <li><%= msg %></li>
         <% end %>
         </ul>
       </div>
     <% end %>
    
      <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name %>
      </div>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.text_field :email %>
      </div>
      <div class="field">
        <%= f.label :message %><br />
        <%= f.text_area :message %>
      </div>
      <div class="actions">
        <%= f.submit "Send"%>
      </div>
    <% end %>
  </div>
</div>