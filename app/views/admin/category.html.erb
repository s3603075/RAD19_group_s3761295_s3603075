<% provide(:title, "Admin") %>
<h1>Category Edit</h1>
<%if Category.all.empty?%>
  <div class="container">
    <div class="alert alert-warning center" role="alert">
      <b class="center">No Category to Edit</b>
    </div>
  </div>
<%else %>
  <div class="container media-container">
    <% Category.all.each do |c| %>
      <div class="media">
        <div class="media-body">
          <div class="content"><b>Category Name: </b><%= c.category_name %></div>
        </div>
        <div class="admin_buttons">
          <div class="link btn btn-success">
            <%= link_to 'Edit Category', edit_category_path(c) %>
          </div>
          <div class="link btn btn-success">
            <%= link_to 'Delete Category', category_path(c), method: :delete,
                        data: { confirm: 'Are you sure?' } %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<%end %>