<% provide(:title, "Admin") %>
<h1>Coordinator Edit</h1>
<%if User.all.empty?%>
  <div class="container">
    <div class="alert alert-warning center" role="alert">
      <b class="center">No Coordinators to Edit</b>
    </div>
  </div>
<%else %>
  <div class=" container coordinator_edit">
    <% User.all.each do |user| %>
      <div class=" col-md-4">
        <div class="media-body ">
        <div class="align-self-start mr-3">
          <%= gravatar_for user %>
        </div>

          <div class="content"><h4 class="media-heading"><%= user.name %></h4></div>
        </div>
        <div class="admin_buttons">
          <div class="link btn btn-success">
            <%= link_to 'Edit Coordinator', edit_user_path(user) %>
          </div>
          <div class="link btn btn-success">
            <%= link_to 'Delete Coordinator', user_path(user), method: :delete,
                        data: { confirm: 'Are you sure?' } %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>